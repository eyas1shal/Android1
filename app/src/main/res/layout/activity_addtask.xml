<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3C79B">


    <EditText
        android:id="@+id/t_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="65dp"
        android:ems="10"
        android:hint="TASK DATE"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/t_note"
        app:layout_constraintStart_toStartOf="@+id/t_note"
        app:layout_constraintTop_toBottomOf="@+id/t_name" />

    <EditText
        android:id="@+id/t_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="98dp"
        android:ems="10"
        android:hint="TASK NAME"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/t_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/t_note"
        android:layout_width="247dp"
        android:layout_height="0dp"
        android:layout_marginBottom="236dp"
        android:contentDescription="NOTE"
        android:ems="10"
        android:hint="NOTE"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel" />

    <Button
        android:id="@+id/t_add"
        android:layout_width="268dp"
        android:layout_height="89dp"
        android:layout_marginBottom="76dp"
        android:background="#07CD00"
        android:text="ADD"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_menu_add"
        app:iconSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_note"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="95dp"
        android:layout_height="84dp"
        android:layout_marginBottom="323dp"
        android:text="X"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="54sp"
        app:iconSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/t_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>